<Window x:Class="DataBind.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBind"
        mc:Ignorable="d"
        Title="MainWindow" Height="622" Width="924">
    <StackPanel>
        <TextBox Text="{Binding Name,Mode=TwoWay}" Margin="5" Height="160"></TextBox>
        <TextBlock Text="{Binding Greeting}" Margin="5" Height="150"/>
    </StackPanel>
</Window>
